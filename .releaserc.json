{
    "branches": [
        "main"
    ],
    "tagFormat": "v${version}",
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "patch"
                    },
                    {
                        "type": "perf",
                        "release": "patch"
                    },
                    {
                        "type": "docs",
                        "scope": "docs",
                        "release": "patch"
                    },
                    {
                        "type": "chore",
                        "release": false
                    },
                    {
                        "type": "refactor",
                        "release": false
                    },
                    {
                        "type": "ci",
                        "release": false
                    },
                    {
                        "type": "test",
                        "release": false
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "‚ú® Features"
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes"
                        },
                        {
                            "type": "perf",
                            "section": "üöÄ Performance Improvements",
                            "hidden": false
                        },
                        {
                            "type": "docs",
                            "section": "üìù Documentation",
                            "hidden": false
                        },
                        {
                            "type": "chore",
                            "section": "üîß Chores",
                            "hidden": false
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Code Refactoring",
                            "hidden": false
                        },
                        {
                            "type": "test",
                            "section": "‚úÖ Tests",
                            "hidden": false
                        },
                        {
                            "type": "ci",
                            "section": "üõ†Ô∏è CI/CD",
                            "hidden": false
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "sed -i 's/v[0-9]*\\.[0-9]*\\.[0-9]*/v${nextRelease.version}/g' README.md"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "package.json",
                    "README.md",
                    "CHANGELOG.md"
                ],
                "message": "üîñ chore(release): v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        "@semantic-release/github"
    ]
}
