{
    "branch": "main",
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    { "type": "feat", "release": "minor" },
                    { "type": "fix", "release": "patch" },
                    { "type": "perf", "release": "patch" },
                    { "type": "docs", "scope": "docs", "release": "patch" },
                    { "type": "chore", "release": false },
                    { "type": "refactor", "release": false },
                    { "type": "ci", "release": false },
                    { "type": "test", "release": false }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "Features"
                        },
                        {
                            "type": "fix",
                            "section": "Bug11 Fixes"
                        },
                        {
                            "type": "chore",
                            "hidden": true
                        },
                        {
                            "type": "docs",
                            "section": "Documents",
                            "hidden": false
                        },
                        {
                            "type": "style",
                            "hidden": true
                        },
                        {
                            "type": "refactor",
                            "hidden": true
                        },
                        {
                            "type": "perf",
                            "hidden": true
                        },
                        {
                            "type": "test",
                            "hidden": true
                        }
                    ]
                }
            }
        ],
        "@semantic-release/changelog",
        [
            "@semantic-release/exec",
            
            {
                "prepareCmd": "sed -i 's/v[0-9]*\\.[0-9]*\\.[0-9]*/v${nextRelease.version}/g' README.md"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "package.json",
                    "README.md",
                    "CHANGELOG.md"
                ],
                "message": "ðŸ”– release: v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    ]
}